Windows Registry Editor Version 5.00

; Disable BitLocker automatic device encryption
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\BitLocker]
"PreventDeviceEncryption"=dword:00000001

; Turn off Offline file
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\CSC]
"Start"=dword:00000004
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\CscService]
"Start"=dword:00000004

; Do not use UTC for real-time clock
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\TimeZoneInformation]
"RealTimeIsUniversal"=dword:00000000

; Unattend stuff
[HKEY_LOCAL_MACHINE\SYSTEM\Setup]
"UnattendFile"=hex(2):43,00,3a,00,5c,00,50,00,72,00,6f,00,67,00,72,00,61,00,6d,\
  00,44,00,61,00,74,00,61,00,5c,00,6f,00,6f,00,62,00,65,00,5f,00,6d,00,6f,00,\
  64,00,65,00,2e,00,78,00,6d,00,6c,00,00,00


; Essential Windows 11 shift + right-click context menu

[-HKEY_CLASSES_ROOT\Directory\background\shell\w11_context_menu_switch]
[HKEY_CLASSES_ROOT\Directory\background\shell\w11_context_menu_switch]
"icon"="explorer.exe"
"MUIVerb"="Right-click context menu switcher"
"NoWorkingDirectory"=""
"Position"="Bottom"
"Extended"=""

[HKEY_CLASSES_ROOT\Directory\background\shell\w11_context_menu_switch\command]
@="conhost cmd /c reg query HKCU\\Software\\Classes\\CLSID\\{86ca1aa0-34aa-4e8b-a509-50c905bae2a2} && reg delete HKCU\\Software\\Classes\\CLSID\\{86ca1aa0-34aa-4e8b-a509-50c905bae2a2} /f || (reg add HKCU\\Software\\Classes\\CLSID\\{86ca1aa0-34aa-4e8b-a509-50c905bae2a2}\\InprocServer32 && taskkill /f /im explorer.exe && start explorer.exe)"


[-HKEY_CLASSES_ROOT\Directory\background\shell\restart_explorer]
[HKEY_CLASSES_ROOT\Directory\background\shell\restart_explorer]
"icon"="explorer.exe"
"MUIVerb"="Restart Explorer"
"NoWorkingDirectory"=""
"Position"="Bottom"
"Extended"=""

[HKEY_CLASSES_ROOT\Directory\background\shell\restart_explorer\command]
@="conhost cmd /c taskkill /f /im explorer.exe & start explorer.exe"


[-HKEY_CLASSES_ROOT\Directory\background\shell\control_panel]
[HKEY_CLASSES_ROOT\Directory\background\shell\control_panel]
"MUIVerb"="Open Control Panel"
"NoWorkingDirectory"=""
"Extended"=""
"Icon"="control.exe"

[HKEY_CLASSES_ROOT\Directory\background\shell\control_panel\command]
@="control"


[-HKEY_CLASSES_ROOT\Directory\background\shell\network_adapter]
[HKEY_CLASSES_ROOT\Directory\background\shell\network_adapter]
"MUIVerb"="View Network Connections"
"NoWorkingDirectory"=""
"Extended"=""
"Icon"="ncpa.cpl"

[HKEY_CLASSES_ROOT\Directory\background\shell\network_adapter\command]
