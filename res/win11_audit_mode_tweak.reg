[-HKEY_CLASSES_ROOT\Directory\background\shell\realtime_protection_switch]
[HKEY_CLASSES_ROOT\Directory\background\shell\realtime_protection_switch]
"MUIVerb"="Real-time Protection switch"
"NoWorkingDirectory"=""
"Extended"=""
"Icon"="\"%ProgramFiles%\\Windows Defender\\Offline\\OfflineScannerShell.exe\""

[HKEY_CLASSES_ROOT\Directory\background\shell\realtime_protection_switch\command]
@="wscript \"C:\\Windows\\OEM\\Run_as_Administrator.vbs\""


[-HKEY_CLASSES_ROOT\*\shell\duplicate]
[HKEY_CLASSES_ROOT\*\shell\duplicate]
"Icon"="%windir%\\OEM\\duplicate_icon.ico"
"MUIVerb"="Duplicate this file"

[HKEY_CLASSES_ROOT\*\shell\duplicate\command]
@="conhost cmd /Q /V:ON /E:ON /C \"set TIME=%%TIME: =0%%&set TimeFn=!TIME:~0,2!-!TIME:~3,2!-!TIME:~6,2!&FOR %%G IN (\"%1\") do copy \"%1\" \"%%~nG_!TimeFn!%%~xG\">nul 2>&1\""


[-HKEY_CLASSES_ROOT\Drive\shell\disk_cleanup]
[HKEY_CLASSES_ROOT\Drive\shell\disk_cleanup]
"MUIVerb"="Disk Cleanup"
"Icon"="cleanmgr.exe"
"NoWorkingDirectory"=""

[HKEY_CLASSES_ROOT\Drive\shell\disk_cleanup\command]
@="cleanmgr /d %1"


